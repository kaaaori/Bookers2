<p id="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'list', book: @booknew %>
    </div>
    
  <div class ="col-md-8 offset-md-1">   
    <h2>Book details</h2>
      <table class="table">
        <tbody>
          <tr>
          　<td><%= image_tag @book.user.get_profile_image(100,100) %>
          　<br><%= link_to @book.user.name,user_path(@user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>